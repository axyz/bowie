#!/usr/bin/env ruby

require 'bowie'
require 'thor'

class BowieCLI < Thor
  
  desc "install song", "install the selected package"
  def install(song)
    Bowie.install(song)
  end

  desc "uninstall song", "remove the selected package"
  def uninstall(song)
    Bowie.uninstall(song)
  end
end

BowieCLI.start(ARGV)